<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BrowserStackTestSuite">
    <test name="UITests">
        <groups>
            <run>
                <include name="BrowserStack"/>
                <include name="UI-Tests"/>
            </run>
        </groups>
        <packages>
            <package name="com.dnd.testingtheblueswebsite.remote.ui"/>
        </packages>
    </test>
    <test name="Login Tests">
        <groups>
            <run>
                <include name="BrowserStack"/>
                <include name="Login-Tests"/>
            </run>
        </groups>
        <packages>
            <package name="com.dnd.testingtheblueswebsite.remote.login"/>
        </packages>
    </test>

    <test name="Register Tests">
        <groups>
            <run>
                <include name="BrowserStack"/>
                <include name="Register-Tests"/>
            </run>
        </groups>
        <packages>
            <package name="com.dnd.testingtheblueswebsite.remote.register"/>
        </packages>
    </test>

    <test name="Security Tests">
        <groups>
            <run>
                <include name="BrowserStack"/>
                <include name="Security-Tests"/>
            </run>
        </groups>
        <packages>
            <package name="com.dnd.testingtheblueswebsite.remote.security"/>
        </packages>
    </test>
</suite>